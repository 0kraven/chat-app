<Window x:Class="chat_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BLACK HAT CHAT" Background="#0F0F0F" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None"
        Loaded="Window_Loaded">
    <Grid>
        <!-- Define 1 row and 1 column for centering -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Define the Border around all elements -->
        <Border BorderBrush="#00FF00" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Padding="40">
            <Grid>
                <!-- Title Section -->
                <TextBlock x:Name="TypingText" FontSize="30" FontFamily="Courier New" Foreground="#00FF00" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,50"/>

                <!-- Enter Button (Initially Visible) -->
                <Button x:Name="EnterButton" Content="Enter" Margin="0,0,0,-20" Width="120" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="#00FF00" Foreground="#0F0F0F" FontWeight="Bold" Click="EnterButton_Click" Visibility="Visible" />
            </Grid>
        </Border>
    </Grid>
</Window>
