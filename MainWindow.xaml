<Window x:Class="chat_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat_app"
        mc:Ignorable="d"
        Title="BLACK HAT CHAT" Height="450" Width="800"
        ResizeMode="NoResize" Background="#0F0F0F">
    <Grid>
        <!-- Header -->
        <TextBlock HorizontalAlignment="Center" Height="39" TextWrapping="Wrap" 
                   Text="BLACK HAT CHAT" VerticalAlignment="Top" 
                   Width="800" TextAlignment="Center" Padding="10" 
                   Background="#1A1A1A" Foreground="#00FF00" 
                   FontWeight="Bold" FontSize="18" FontFamily="Consolas"/>

        <!-- Message Display Area -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,50,10,60" BorderBrush="#00FF00" BorderThickness="1">
            <StackPanel x:Name="MessageDisplayArea" Background="#1A1A1A" />
        </ScrollViewer>

        <!-- Input and Button Area -->
        <Grid HorizontalAlignment="Center" Height="47" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="800">
            <!-- Message Box -->
            <TextBox x:Name="MessageBox" HorizontalAlignment="Left" Height="47" Margin="10,0,0,0" TextWrapping="Wrap" 
                     Padding="15,15,0,0"
                     Width="710" 
                     Text="Enter your message" 
                     Foreground="Gray" Background="#0F0F0F" 
                     BorderBrush="#00FF00" BorderThickness="1"
                     FontFamily="Consolas" FontSize="14"
                     GotFocus="MessageBox_GotFocus" 
                     LostFocus="MessageBox_LostFocus"/>

            <!-- Send Button -->
            <Button Content="Send" HorizontalAlignment="Left" Height="47" Margin="720,0,0,0" VerticalAlignment="Top" Width="80" 
                    Background="#00FF00" Foreground="#0F0F0F" 
                    FontFamily="Consolas" FontSize="14" FontWeight="Bold" 
                    BorderBrush="#00FF00" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
