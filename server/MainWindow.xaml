<Window x:Class="ServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server" Height="350" Width="525">
    <Grid>
        <Button Name="StartButton" Content="Start Server" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="30" Margin="10,10,0,0" Click="StartButton_Click"/>
        <Button Name="StopButton" Content="Stop Server" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="30" Margin="120,10,0,0" Click="StopButton_Click"/>
        
        <TextBlock Name="ServerStatus" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,50,0,0" FontSize="16"/>

        <!-- ListBox to display connected clients -->
        <ListBox Name="ClientList" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="200" Margin="10,80,0,0"/>
    </Grid>
</Window>
